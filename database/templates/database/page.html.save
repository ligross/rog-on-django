{% extends "base.html" %}
cd ..
{% block title %}База знаний{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>{{ page.page_title }}</h3>
        </div>
        <p class="date">{{ page.pub_date }}</p>
        <div class="addthis_sharing_toolbox" data-title="{{ page.page_title }}"></div>
        <div class="newsInfo">
            <div class="panel-body">
                {{ page.page_text|safe }}
                <div style="clear:both;"></div>
            </div>
        </div>
     <div class="panel-footer">
            Последнее обновление: {{ page.last_update }}
        </div>
    </div>
{% endblock %}


